<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/iv_pensador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/shakespeare"
        android:scaleType="fitXY"
        android:alpha="0.5"/>

    <TextView android:id="@+id/tv_pensador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PENSADOR"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"/>

    <TextView android:id="@+id/tv_pensamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PENSAMENTO"
        android:textSize="25dp"
        android:layout_below="@+id/tv_pensador"/>
</RelativeLayout>

